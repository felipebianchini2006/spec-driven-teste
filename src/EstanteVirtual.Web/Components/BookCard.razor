@inject NavigationManager Navigation

<div class="book-card" @onclick="@(() => Navigation.NavigateTo($"/books/{Book.Id}"))">
    @if (!string.IsNullOrEmpty(Book.CoverImageUrl))
    {
        <img src="@Book.CoverImageUrl" alt="@Book.Title" class="book-cover" onerror="this.src='/images/book-placeholder.png'" />
    }
    else
    {
        <img src="/images/book-placeholder.png" alt="@Book.Title" class="book-cover" />
    }
    
    <div class="book-info">
        <h5 class="book-title" title="@Book.Title">@Book.Title</h5>
        <p class="book-author" title="@Book.Author">@Book.Author</p>
        
        @if (Book.Review != null)
        {
            <div class="book-rating">
                @for (int i = 1; i <= 5; i++)
                {
                    @if (i <= Book.Review.Rating)
                    {
                        <span class="star filled">★</span>
                    }
                    else
                    {
                        <span class="star">☆</span>
                    }
                }
            </div>
        }
        else
        {
            <div class="book-no-review">
                <small class="text-muted">Clique para avaliar</small>
            </div>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public BookDto Book { get; set; } = null!;
}
